{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@wan-monitor/shared": ["../../packages/shared/src/index.ts"],
      "@wan-monitor/shared/metrics": ["../../packages/shared/src/metrics.ts"]
    }
  },
  "include": ["src"]
}
