{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/server/**/*",
    "src/services/**/*",
    "src/database/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "src/main.tsx",
    "src/App.tsx",
    "src/App.test.tsx",
    "src/test/**/*",
    "src/vite-env.d.ts"
  ]
}
