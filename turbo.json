{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env",
    ".env.local",
    ".env.*.local",
    "package.json",
    "pnpm-lock.yaml",
    "biome.json",
    "tsconfig*.json",
    ".grit/**"
  ],
  "globalEnv": ["CI", "NODE_ENV"],
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "index.html",
        "*.config.{ts,js,cjs,mjs}",
        "vite.config.ts",
        "tsup.config.ts",
        "tsconfig*.json",
        "package.json"
      ],
      "outputs": ["dist/**", "../../dist/**"],
      "env": [
        "VITE_API_URL",
        "SERVER_PORT",
        "SERVER_HOST",
        "DB_HOST",
        "DB_PORT",
        "DB_PROTOCOL",
        "WAN_MONITOR_USERNAME",
        "WAN_MONITOR_PASSWORD",
        "JWT_SECRET",
        "JWT_EXPIRES_IN"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "VITE_API_URL",
        "SERVER_PORT",
        "SERVER_HOST",
        "LOG_LEVEL",
        "LOG_PRETTY",
        "DB_HOST",
        "DB_PORT",
        "DB_PROTOCOL",
        "DB_AUTO_FLUSH_ROWS",
        "DB_AUTO_FLUSH_INTERVAL",
        "DB_REQUEST_TIMEOUT",
        "DB_RETRY_TIMEOUT",
        "PING_TIMEOUT",
        "PING_TRAIN_COUNT",
        "PING_HOSTS",
        "WAN_MONITOR_USERNAME",
        "WAN_MONITOR_PASSWORD",
        "JWT_SECRET",
        "JWT_EXPIRES_IN"
      ]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "*.d.ts",
        "tsconfig*.json",
        "package.json"
      ],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "**/*.test.{ts,tsx}",
        "**/*.spec.{ts,tsx}",
        "**/test/**",
        "*.config.{ts,js,cjs,mjs}",
        "vitest.config.ts",
        "vite.config.ts",
        "tsconfig*.json",
        "package.json"
      ],
      "outputs": [],
      "env": ["QUESTDB_AVAILABLE", "DB_HOST", "DB_PORT"]
    },
    "lint": {
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "biome.json",
        ".biome.json",
        "tsconfig*.json",
        ".grit/**",
        "package.json"
      ],
      "outputs": []
    },
    "format": {
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json}",
        "biome.json",
        ".biome.json",
        "package.json"
      ],
      "outputs": []
    },
    "format:check": {
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json}",
        "biome.json",
        ".biome.json",
        "package.json"
      ],
      "outputs": []
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "**/*.test.{ts,tsx}",
        "**/*.spec.{ts,tsx}",
        "**/test/**",
        "*.config.{ts,js,cjs,mjs}",
        "vitest.config.ts",
        "vite.config.ts",
        "tsconfig*.json",
        "package.json"
      ],
      "outputs": ["coverage/**"],
      "env": ["QUESTDB_AVAILABLE", "DB_HOST", "DB_PORT"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "cache": false,
      "inputs": [
        "e2e/**/*.{ts,tsx}",
        "playwright.config.ts",
        "docker-compose.e2e.yml",
        "scripts/e2e/**",
        "package.json"
      ],
      "outputs": ["playwright-report/**", "test-results/**"],
      "env": [
        "DB_HOST",
        "DB_PORT",
        "DB_PROTOCOL",
        "DB_AUTO_FLUSH_ROWS",
        "DB_AUTO_FLUSH_INTERVAL",
        "DB_REQUEST_TIMEOUT",
        "DB_RETRY_TIMEOUT",
        "WAN_MONITOR_PASSWORD",
        "QUESTDB_AVAILABLE"
      ]
    }
  }
}
